{
  "name": "xcftools",
  "title": "xcftools",
  "summary": "convert bcf file to xcf format",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "inp_bcf",
      "label": "input bcf/vcf.gz file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "inp_idx",
      "label": "index input file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "out_pfx",
      "label": "prefix for output files",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "out_fmt",
      "label": "format for output files",
      "class": "string",
      "optional": true,
      "default" : "sh",
      "help": ""
    },
    {
      "name": "inp_reg",
      "label": "genomic region",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "maf_thr",
      "label": "threshold to distinguish rare and common variants",
      "class": "float",
      "optional": true,
      "default": 0.001,
      "help": ""
    },
    {
      "name": "num_thr",
      "label": "number of threads",
      "class": "int",
      "optional": true,
      "default" : 1,
      "help": ""
    },
    {
      "name": "mount_inputs",
      "label": "whether to mount all files that were supplied as inputs to the app instead of downloading them to the local storage of the execution worker",
      "class": "boolean",
      "optional": true,
      "default" : true,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "out_bcf",
      "label": "output bcf file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "out_idx",
      "label": "output index file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "out_bin",
      "label": "output bin file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "out_fam",
      "label": "output fam file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "out_log",
      "label": "output log file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "file": "src/xcftools.sh",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0"
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem2_ssd1_v2_x4"
        }
      }
    }
  }
}
